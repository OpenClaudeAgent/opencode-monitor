{
    "include": ["src"],
    "exclude": [
        ".venv",
        "**/__pycache__",
        "tests",
        "worktrees",
        ".git",
        ".lsmcp",
        ".pytest_cache",
        ".ruff_cache"
    ],
    "venvPath": ".",
    "venv": ".venv",
    "pythonVersion": "3.12",
    "typeCheckingMode": "basic",
    "reportOptionalMemberAccess": "warning",
    "reportOptionalSubscript": "warning"
}
